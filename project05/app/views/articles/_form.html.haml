= form_for(@article) do |f|
  - if @article.errors.any?
    #error_explanation
      %h2
        = pluralize(@article.errors.count, "error")
        prohibited this article from being saved:
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg
  %br/
  .field_label
    = f.label :title
  .field
    = f.text_field :title
  .field_label
    = f.label :author_id
  .field
    = f.select :author_id, @authors.collect { |a| [a.name, a.id]}, :include_blank => true
  .field_label
    = f.label :body
  .field
    = f.text_area :body
  .actions
    = f.submit
